{
  "name": "react-hearthstone",
  "version": "0.1.1",
  "description": "React Components for Hearthstone",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "babel": "babel ./src --out-dir ./lib",
    "webpack": "webpack --verbose --colors --display-error-details",
    "webpack-dev-server": "webpack-dev-server --watch-poll",
    "postcss": "postcss --use autoprefixer src/stylesheets/*.css -d build/",
    "postcss:watch": "postcss -w --use autoprefixer *.css -d build/",
    "build": "npm test && npm run babel && npm run postcss && npm run webpack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matkl/react-hearthstone"
  },
  "keywords": [
    "hearthstone",
    "deck builder",
    "react-component"
  ],
  "author": "Matthias Klein <matthias@klein.pw>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matkl/react-hearthstone/issues"
  },
  "homepage": "https://github.com/matkl/react-hearthstone#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.7.5",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "postcss-cli": "^2.5.1",
    "react-addons-test-utils": "^15.0.1",
    "webpack": "^1.12.15",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "react": "^15.0.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
